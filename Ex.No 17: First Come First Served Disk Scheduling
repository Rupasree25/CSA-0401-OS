#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, head, seek = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    int req[n];

    printf("Enter disk request sequence:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    for(i = 0; i < n; i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    printf("\nTotal Seek Time: %d\n", seek);
    printf("Seek Sequence: ");
    for(i = 0; i < n; i++)
        printf("%d ", req[i]);

    return 0;
}
