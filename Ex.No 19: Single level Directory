#include <stdio.h>
#include <string.h>

int main() {
    char dir[10][10];
    int n = 0, ch;
    char name[10];
    while (1) {
        printf("\n1.Create  2.Delete  3.Search  4.Display  5.Exit\nEnter your choice: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1:
                printf("Enter file name: ");
                scanf("%s", dir[n]);
                n++;
                break;
            case 2:
                printf("Enter file name to delete: ");
                scanf("%s", name);
                for (int i = 0; i < n; i++) {
                    if (strcmp(dir[i], name) == 0) {
                        strcpy(dir[i], dir[n - 1]);
                        n--;
                        printf("File deleted.\n");
                        break;
                    }
                }
                break;
            case 3:
                printf("Enter file name to search: ");
                scanf("%s", name);
                int found = 0;
                for (int i = 0; i < n; i++)
                    if (strcmp(dir[i], name) == 0)
                        found = 1;
                if (found)
                    printf("File found.\n");
                else
                    printf("File not found.\n");
                break;
            case 4:
                printf("Files:\n");
                for (int i = 0; i < n; i++)
                    printf("%s\n", dir[i]);
                break;
            case 5:
                return 0;
        }
    }
}
